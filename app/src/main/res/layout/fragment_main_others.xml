<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.main.fragments.OthersFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/other_btn_printer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_others_printer"
            android:drawablePadding="6dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="@string/main_others_printer"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/other_btn_crypto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_others_crypto"
            android:drawablePadding="6dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="@string/main_others_crypto"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/other_btn_printer"
            app:layout_constraintStart_toEndOf="@id/other_btn_printer"
            app:layout_constraintTop_toTopOf="@id/other_btn_printer"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/other_btn_ftp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_others_ftp"
            android:drawablePadding="6dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="@string/main_others_ftp"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/other_btn_crypto"
            app:layout_constraintStart_toEndOf="@id/other_btn_crypto"
            app:layout_constraintTop_toTopOf="@id/other_btn_crypto"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/other_btn_font"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_others_font"
            android:drawablePadding="6dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="@string/main_others_font"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/other_btn_ftp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/other_btn_ftp"
            app:layout_constraintTop_toTopOf="@id/other_btn_ftp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/other_btn_opentype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_others_opentype"
            android:drawablePadding="6dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="@string/main_others_opentype"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/other_btn_printer"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/other_btn_floating"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_others_floatingactionmode"
            android:drawablePadding="6dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="@string/main_others_floating"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/other_btn_opentype"
            app:layout_constraintStart_toEndOf="@id/other_btn_opentype"
            app:layout_constraintTop_toTopOf="@id/other_btn_opentype"
            app:layout_constraintWidth_percent="0.25" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>