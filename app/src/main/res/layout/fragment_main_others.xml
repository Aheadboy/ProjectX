<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.main.fragments.OthersFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/other_btn_printer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_develop_developing"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:text="@string/main_others_printer"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/other_btn_encrypt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?selectableItemBackgroundBorderless"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_develop_developing"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:text="@string/main_others_encrypt"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/other_btn_printer"
            app:layout_constraintStart_toEndOf="@id/other_btn_printer"
            app:layout_constraintTop_toTopOf="@id/other_btn_printer"
            app:layout_constraintWidth_percent="0.25" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>